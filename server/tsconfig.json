{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    // Ensure that Babel can safely transpile files in the TypeScript project
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "preserveSymlinks": false,
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "common/*": [
        "./src/common/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}