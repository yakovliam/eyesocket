{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "*": [
        "node_modules/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "node_modules/common/**/*"
  ],
}